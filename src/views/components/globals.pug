//- Shapes

mixin shape-box(title, shape)
	section(class="shapes__" + shape).card
		h3.card__title= title
		p.card__description Ingresa las medidas en #[strong centímetros]:
		case shape
			when "square"
				form.card__form
					label Lado#[input.card__input#squareInput(type='number')]
					button.card__button.squareCalc(type='button') Calcular
			when "rectangle"
				form.card__form
					label Altura#[input.card__input#rectangleHeightInput(type='number')]
					label Base#[input.card__input#rectangleBaseInput(type='number')]
					button.card__button.rectangleCalc(type='button') Calcular
			when "triangle"
				p.card__info Si el triangulo tiene 2 lados iguales, la #[strong base] es el valor diferente a los 2 lados.
				p.card__info Si todos los lados del triangulo son desiguales, asegurate de colocar los valores de menor a mayor.
				form.triangle__form
					label Lado A#[input.card__input#triangleSideAInput(type='number')]
					label Lado B#[input.card__input#triangleSideBInput(type='number')]
					label Base#[input.card__input#triangleBaseInput(type='number')]
					button.card__button.triangleCalc(type='button') Calcular
			when "diamond"
				p.card__info La #[strong 1° diagonal] puede ser la menor o mayor.
				form.card__form
					label Lado#[input.card__input#diamondSideInput(type='number')]
					label 1° Diagonal#[input.card__input#diamondDiagonalInput(type='number')]
					button.card__button.diamondCalc(type='button') Calcular
			when "circle"
				form.card__form
					label Radio#[input.card__input#circleInput(type='number')]
					button.card__button.circleCalc(type='button') Calcular
		ul.card__results
			case shape
				when "triangle"
					li #[strong Altura] #[span#triangleHeight 0]cm
					li #[strong Tipo] "#[span#triangleType]"
				when "diamond"
					li #[strong 2° Diagonal] #[span#diamondDiagonal 0]cm
			if shape== "circle"
				li #[strong Circunferencia] #[span#circumference 0]cm
			else
				li #[strong Perimetro] #[span(id=shape + "Perimeter") 0]cm
			li #[strong Área] #[span(id=shape + "Area") 0]cm#[sup 2]

