//- Statistics

mixin statistic-box
	section.statistics__MMM.card
		p.card__data Lista: #[span#data]
		form.card__form
			label: input.card__input#dataInput(type='number')
			button.card__button--insert.insert(type='button') Ingresar
			button.card__button--remove.remove(type='button') Eliminar
			button.card__button.statisticCalc(type='button') Calcular
		ul.card__results--MMM
			li #[strong Promedio] #[span#mean 0]
			li #[strong Mediana] #[span#median 0]
			li #[strong Moda] #[span#mode 0]