- var themes = ["shapes", "discounts", "statistics"]
- var medias = ["linkedin", "github", "instagram", "blog"]
- var technologies = ["figma", "html", "css", "js", "npm", "pug", "sass", "webpack", "git", "github"]

//- --------------------------------------------------------------------------------------
//- Navbar

mixin medias
	each item in medias
		.small__icon
			a.small__icon--media(href="#")

//- --------------------------------------------------------------------------------------
//- Menu

mixin themes(theme, title)
	.menu__themes.themes
		each item in themes
			a.themes__bar.themes__bar--anime(href='#' + item + '-container')
				figure.medium__icon: i(class="medium__icon--theme-" + item)
				case item
					when "shapes"
						| Figuras
					when "discounts"
						| Descuentos
					when "statistics"
						| Estadisticas

mixin technologies
	figure.menu__technologies
		each item in technologies
			.medium__icon: i(class="medium__icon--tech-" + item)

//- --------------------------------------------------------------------------------------
//- Shapes

mixin shape-box(title, shape)
	section(class="shape__" + shape).card
		h3.card__title= title
		p.card__description Ingresa las medidas en #[strong centímetros]:
		case shape
			when "square"
				form.card__form
					label Lado#[input.card__input#squareInput(type='number')]
					button.card__button.squareCalc(type='button') Calcular
			when "rectangle"
				form.card__form
					label Altura#[input.card__input#rectangleHeightInput(type='number')]
					label Base#[input.card__input#rectangleBaseInput(type='number')]
					button.card__button.rectangleCalc(type='button') Calcular
			when "triangle"
				ul
					li.card__info Si el triangulo tiene 2 lados iguales, la #[strong base] es el valor diferente a los 2 lados.
					li.card__info Si todos los lados del triangulo son desiguales, asegurate de colocar los valores de menor a mayor.
				form.triangle__form
					label Lado A#[input.card__input#triangleSideAInput(type='number')]
					label Lado B#[input.card__input#triangleSideBInput(type='number')]
					label Base#[input.card__input#triangleBaseInput(type='number')]
					button.card__button.triangleCalc(type='button') Calcular
			when "diamond"
				ul
					li.card__info La #[strong 1° diagonal] puede ser la menor o mayor.
				form.card__form
					label Lado#[input.card__input#diamondSideInput(type='number')]
					label 1° Diagonal#[input.card__input#diamondDiagonalInput(type='number')]
					button.card__button.diamondCalc(type='button') Calcular
			when "circle"
				form.card__form
					label Radio#[input.card__input#circleInput(type='number')]
					button.card__button.circleCalc(type='button') Calcular
		ul.card__results
			case shape
				when "triangle"
					li #[strong Tipo]"#[span#triangleType]"
					li #[strong Altura]#[span.result#triangleHeight 0]cm
				when "diamond"
					li #[strong 2° Diagonal]#[span.result#diamondDiagonal 0]cm
			if shape== "circle"
				li #[strong Circunferencia]#[span.result#circumference 0]cm
			else
				li #[strong Perimetro]#[span.result(id=shape + "Perimeter") 0]cm
			li #[strong Área]#[span.result(id=shape + "Area") 0]cm#[sup 2]

//- --------------------------------------------------------------------------------------
//- Discounts

mixin discount-price-box
	section.discounts__price.card
		form.card__form
			label Precio del producto $#[input.card__input#priceInput(type='number')]
			label Descuento %#[input.card__input#discountInput(type='number')]
			button.card__button.discountCalc(type='button') Calcular
		p.card__results.result #[strong Precio con descuento]#[span#priceDiscount $0]

mixin discount-cupon-box
	section.discounts__cupon.card
		h3.card__title Descuento con cupon
		.card__product
			.card__product--image imagen del producto
			h4.card__product--title Guitarra Fender Stratocaster American Standard
			p.card__product--price#priceCode $800
			p.card__product--info Aprovecha ahora y aplica hasta un 30% de descuento con código de referido
			form.card__product--form
				label Ingresa aquí tu cogido#[input.card__product--input#inputCode(type='text')]
				button.card__product--button.confirmCupon(type='button') Confirmar
			p.card__product--validation.result#validation
		h4.card__code Códigos
		em: ul.card__code-list
			li awesomeGuitar30
			li awesomeGuitar20
			li awesomeGuitar15

//- --------------------------------------------------------------------------------------
//- Statistics

mixin statistic-box
	section.statistics__MMM.card
		p.card__data Lista: #[span#data]
		form.card__form
			label Ingresa aquí los datos de la lista:#[input.card__input#dataInput(type='number')]
			button.card__button--insert.insert(type='button') Ingresar
			button.card__button--remove.remove(type='button') Remover
			button.card__button.statisticCalc(type='button') Calcular
		ul.card__results--MMM
			li #[strong Promedio]#[span.result#mean 0]
			li #[strong Mediana]#[span.result#median 0]
			li #[strong Moda]#[span.result#mode 0]